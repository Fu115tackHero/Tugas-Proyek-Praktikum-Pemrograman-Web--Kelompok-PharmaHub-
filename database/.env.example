# ============================================
# PHARMAHUB DATABASE CONFIGURATION
# Copy this file to .env and update values
# ============================================

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pharmahub_db
DB_USER=postgres
DB_PASSWORD=Lavotsirc534231

# Connection Pool Settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# SSL Settings (for production)
DB_SSL_MODE=disable
# Options: disable, allow, prefer, require, verify-ca, verify-full

# ============================================
# APPLICATION SETTINGS
# ============================================

# Environment
NODE_ENV=development
# Options: development, production, test

# Server
PORT=3000
API_PORT=3001

# ============================================
# SECURITY
# ============================================

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=10

# Session Secret
SESSION_SECRET=your-session-secret-key-change-this

# ============================================
# FILE UPLOAD
# ============================================

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880
# 5MB = 5 * 1024 * 1024 bytes

# Allowed MIME types for images
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@pharmahub.com

# Cloud Storage (if using external storage instead of BYTEA)
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=pharmahub-uploads

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# PAYMENT GATEWAY
# ============================================

# Midtrans
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# ============================================
# LOGGING
# ============================================

# Log Level
LOG_LEVEL=info
# Options: error, warn, info, debug

# Log File Path
LOG_FILE_PATH=./logs/app.log

# ============================================
# BACKUP SETTINGS
# ============================================

# Backup Directory
BACKUP_DIR=./backups

# Backup Retention (days)
BACKUP_RETENTION_DAYS=30

# Auto Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *
# Default: Every day at 2 AM

# ============================================
# FRONTEND URL (for CORS)
# ============================================

FRONTEND_URL=http://localhost:5173
# Vite default dev server

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# DATABASE MIGRATION
# ============================================

# Run migrations on startup
AUTO_MIGRATE=false

# Seed database with sample data
SEED_DATABASE=false

# ============================================
# RATE LIMITING
# ============================================

# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW=900000
# 15 minutes = 15 * 60 * 1000

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CACHE SETTINGS
# ============================================

# Redis (if using cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (seconds)
CACHE_TTL=3600
# 1 hour

# ============================================
# NOTIFICATION SETTINGS
# ============================================

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=true

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS=false

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Sentry (Error tracking)
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=UA-XXXXX-Y

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Show SQL queries in console
DEBUG_SQL=false

# Enable API documentation (Swagger)
ENABLE_API_DOCS=true

# Mock external services
MOCK_PAYMENT_GATEWAY=true
MOCK_EMAIL_SERVICE=true

# ============================================
# PRODUCTION SETTINGS
# ============================================

# Production Database (override when NODE_ENV=production)
# PROD_DB_HOST=your-production-database-host
# PROD_DB_NAME=pharmahub_production
# PROD_DB_USER=pharmahub_user
# PROD_DB_PASSWORD=strong-production-password
# PROD_DB_SSL_MODE=require

# Production URLs
# PROD_FRONTEND_URL=https://pharmahub.com
# PROD_API_URL=https://api.pharmahub.com

# ============================================
# NOTES
# ============================================

# 1. Never commit .env file to version control
# 2. Keep .env.example updated when adding new variables
# 3. Use strong passwords in production
# 4. Enable SSL for production database
# 5. Use environment-specific values
# 6. Rotate secrets regularly
